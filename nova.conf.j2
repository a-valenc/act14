[database]
connection = mysql+pymysql://{{ nova_database_user }}:{{ nova_database_password }}@{{ mysql_server_address }}/{{ nova_database_name }}

[api_database]
connection = mysql+pymysql://{{ nova_database_user }}:{{ nova_database_password }}@{{ mysql_server_address }}/{{ nova_api_database_name }}

[DEFAULT]
rpc_backend = rabbit
auth_strategy = keystone
my_ip = {{ ansible_host }}

[keystone_authtoken]
auth_uri = http://{{ os_controller_primary_node }}:5000
auth_url = http://{{ os_controller_primary_node }}:5000
memcached_servers = {{ os_controller_primary_node }}:11211
auth_type = password
project_domain_name = Default
user_domain_name = Default
project_name = service
username = nova
password = {{ nova_service_password }}
